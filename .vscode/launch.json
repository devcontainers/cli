    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug devcontainer merge command",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/devcontainer.js",
            "args": ["merge", "--parent-devcontainer", "parent.json.log", "--child-devcontainer", "child.json.log"], // Placeholder files
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "resolveSourceMapLocations": [
              "${workspaceFolder}/**",
              "!**/node_modules/**"
            ],
            "preLaunchTask": "npm: compile"
          }
    ]
  }